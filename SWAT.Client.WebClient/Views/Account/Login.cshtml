@using SWAT.Client.WebClient.Models
@model LoginModel

@{
    Layout = null;
    ViewBag.Title = "Sign in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>@ViewBag.Title - Coyote</title>

    <meta name="description" content="Sign in to Coyote's web app.">
    <meta name="author" content="Coyote Logistics">

    <meta name="viewport" content="width=device-width">

    <link rel="shortcut icon" href="@Url.Content("~/Content/favicon.ico")">

    <link href="@System.Configuration.ConfigurationManager.AppSettings["StylesheetUrl"]" rel="stylesheet" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    @*<link href="~/Content/coyote.claw.min.css" rel="stylesheet" />*@

    <style>
        /* Necessary to hide specific error messages */
        .validation-summary-errors ul {
            display: none;
        }
    </style>
</head>

<body>
    <div id="app-container" class="box--gray-extra-light">
        <header id="main-header" class="box--brand-green box--border-bottom">
            <div class="page-wrapper-new">
                <span class="fl soft-half hard--left nudge--right">
                    <svg id="header-logo" class="fill-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1707 1024">
                        <path d="M1706.667 810.667l-810.667-810.667v426.667h-896l213.333 213.333h810.667v-213.333l426.667 384h-768l170.667 213.333h640l213.333-213.333z"></path>
                    </svg>
                </span>
            </div>
        </header>
        <div id="main" role="main">
            <div class="page-wrapper-new">
                <div class="text-center nudge-double--ends">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 260 38" height="30">
