                    </svg>
                    <div class="mega nudge--top weight--light text-black hide-on-unsupported">
                        Zone of Action
                    </div>
                </div>
                <div class="no-js--alert text-center nudge-double--ends">
                    <p class="gamma alert alert--error inline-block">
                        This application requires JavaScript, but it is currently disabled or not supported on your browser.
                    </p>
                </div>
                <div class="grid grid--align-center hide-on-unsupported">
                    <div class="grid__cell one-whole lap-six-tenths desk-one-third">
                        <div class="panel">
                            <div class="panel__heading">
                                <div class="panel__title">
                                    Sign in
                                </div>
                            </div>
                            <div class="panel__body">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <p class="authorization-summary-errors alert alert--error text-center">
                                        You are currenty logged in as @User.Identity.Name, but you requested a resource that you were not authorized for. Either provide credentials that do have access or contact your administrator to grant you access.
                                    </p>
                                }
                                @using (Html.BeginForm())
                                {

                                    <ul class="form-fields nudge--bottom">
                                        <li class="cf">
                                            <label for="UserName" class="label block">Username</label>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "text-input one-whole", @id = "UserName", @autofocus = "autofocus", @placeholder = "john.smith", @tabindex = "1" })
                                        </li>
                                        <li class="cf">
                                            <label for="Password" class="label block">Password</label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "text-input one-whole", @id = "Password", @tabindex = "2" })
                                        </li>
                                        <li class="cf">
                                            <button type="submit" id="saveForm" class="button button--loud one-whole" tabindex="4">Sign in</button>
                                        </li>
                                    </ul>

                                    @Html.ValidationSummary(true, "The username or password you entered is incorrect.", new { @class = "alert alert--error text-center" })

                                    if ((ViewBag.ShowClientCertificateLink != null) && (ViewBag.ShowClientCertificateLink))
                                    {
                                        @Html.ActionLink("Use client certificate", "CertificateSignIn", new { returnUrl = ViewBag.ReturnUrl })
                                    }
                                }
                                @*<p>
                                    <a href="@System.Configuration.ConfigurationManager.AppSettings["ForgotPasswordUrl"]">Forgot your password?</a>
                                </p>*@

                                <p class="flush">
                                    To request an account, please contact your Coyote rep or call <a href="tel:1-877-626-9683">(877) 6-COYOTE</a>.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="soft text-center show-on-unsupported hidden">
                    <h3 class="landmark--large">Coyote's web application works on the latest versions of<br /><a href="https://www.google.com/chrome" title="Download Chrome.">Chrome</a>, <a href="http://www.mozilla.org/en-US/firefox/new/" title="Download Firefox.">Firefox</a>, and <a href="http://windows.microsoft.com/en-US/internet-explorer/download-ie" title="Can we convince you to download one of the other browsers? No... Ok, download Internet Explorer.">Internet Explorer</a>.</h3>
                    <p id="override-trigger">I'll take my chances and <a href="#" title="Sign in anyway">sign in</a>.</p>
                    <p>If you need further support please contact your Coyote Rep.</p>
                </div>
            </div>
        </div>
        <footer id="main-footer" class="text-center">
            <small>
                Copyright &copy; @DateTime.Today.Year Coyote. All rights reserved.
                <a href="http://coyote.com/terms#website-terms-of-use" target="_blank" class="nudge-half--left">Terms of Use</a>
                <a href="http://coyote.com/terms#privacy-policy" target="_blank" class="nudge-half--left">Privacy Policy</a>
                <a href="http://classic.coyote.com" class="nudge-half--left" target="_blank">Coyote Classic</a>
            </small>
        </footer>
    </div>
    <script>

        function initLogin() {
            $('.hide-on-unsupported').removeClass('hidden');
        };

        $(function () {
            if (Modernizr.hashchange && Modernizr.generatedcontent && Modernizr.svg) {
                $('html').addClass('supported');
            } else {
                $('html').addClass('unsupported');
                $('.hide-on-unsupported').addClass('hidden');
                $('.show-on-unsupported').removeClass('hidden');
                $('#override-trigger a').on('click', function () {
                    initLogin();
                    $('.show-on-unsupported').addClass('hidden');
                });
            }
        });
    </script>

</body>
</html>