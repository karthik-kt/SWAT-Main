                        <path d="M166.993 6.2 L173.496 6.2 L173.496 36.6 L166.993 36.6 L166.993 6.2 Z" />
                        <path d="M134.336 6.2 L158.968 6.2 L158.968 11.2 L134.336 11.2 L134.336 6.2 Z" />
                        <path d="M143.376 14 L149.937 14 L149.937 36.6 L143.376 36.6 L143.376 14 Z" />
